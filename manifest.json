{
  "name": "safedata",
  "vendor": "vtex",
  "version": "1.0.0",
  "title": "Safedata",
  "description": "An authorization middleware to work with sensitive data on MasterData.",
  "mustUpdateAt": "2018-01-04",
  "categories": [],
  "dependencies": {},
  "builders": {
    "node": "6.x",
    "graphql": "1.x",
    "docs": "0.x"
  },
  "scripts": {
    "prereleasy": "bash lint.sh"
  },
  "credentialType": "absolute",
  "policies": [
    {
      "name": "outbound-access",
      "attrs": {
        "host": "vtexid.vtex.com.br",
        "path": "api/"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "api.vtex.com",
        "path": "api/dataentities/*"
      }
    },
    {
      "name": "outbound-access",
      "attrs": {
        "host": "portal.vtexcommercestable.com.br",
        "path": "api/checkout/pub/*"
      }
    },
    {
      "name": "ADMIN_DS"
    },
    {
      "name": "colossus-fire-event"
    },
    {
      "name": "colossus-write-logs"
    }
  ],
  "settingsSchema": {
    "title": "Safedata",
    "type": "object",
    "properties": {
      "entityConfigurations": {
        "title": "Entity Configurations",
        "type": "array",
        "default": [
          {
            "entityAcronym": "AD",
            "fieldToMatchOnEntity": "userId",
            "fieldToMatchOnClient": "id",
            "canCreate": true
          }
        ],
        "items": {
          "type": "object",
          "properties": {
            "entityAcronym": {
              "type": "string",
              "title": "Entity acronym on MasterData"
            },
            "fieldToMatchOnEntity": {
              "type": "string",
              "title": "Field to match on current entity"
            },
            "fieldToMatchOnClient": {
              "type": "string",
              "title": "Field to match on the CL entity"
            },
            "canCreate": {
              "type": "boolean",
              "title": "Allow creating objects anonymously?"
            }
          }
        }
      }
    }
  },
  "billingOptions": {
    "type": "free",
    "support": {
      "url": "https://support.vtex.com/hc/requests"
    },
    "availableCountries": [
      "*"
    ]
  },
  "$schema": "https://raw.githubusercontent.com/vtex/node-vtex-api/master/gen/manifest.schema"
}
